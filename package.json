{
  "name": "ai-news-video-generator",
  "version": "0.1.0",
  "description": "Automated AI news video generation pipeline system",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "setup": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'setup.bat' : 'bash setup.sh', {stdio: 'inherit'})\"",
    "run:research": "npm run build && node dist/scripts/run-research.js",
    "run:script-gen": "npm run build && node dist/scripts/run-script-generation.js",
    "run:subtitle": "npm run build && node dist/scripts/run-subtitle-generation.js",
    "run:voice": "npm run build && node dist/scripts/run-voice-synthesis.js",
    "run:video": "npm run build && node dist/scripts/run-video-composition.js",
    "run:upload": "npm run build && node dist/scripts/run-youtube-upload.js",
    "run:pipeline": "npm run build && node dist/scripts/run-pipeline.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e"
  },
  "keywords": [
    "ai",
    "video-generation",
    "youtube",
    "automation",
    "pipeline"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "googleapis": "^130.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
